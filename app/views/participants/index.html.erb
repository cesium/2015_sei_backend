<div class="col-md-12 text-center">
	<br />
	<br />
    <% @participants.each do |participant| %>
        <div class="col-md-3">
            <div class="badge-name">
                <h5><%= link_to participant.full_name, edition_participant_path(@edition, participant).sub(/\d+\z/, participant.username) %></h5>
            </div>
            <div class="badge-logo">
                <%= link_to (image_tag (participant.avatar.url)), edition_participant_path(@edition, participant).sub(/\d+\z/, participant.username) %>
            </div>  
        </div>
    <% end %>
</div>
