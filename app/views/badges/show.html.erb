<div id="notice">
	<%= notice %>
</div>

<div id="badge" class="form-container">
	<div id="badge-name">
		<h1><%= @badge.name %></h1>
	</div>	
	<div id="badge-description">
		<h4><%= @badge.description %></h4>
	</div>	
	<div id="badge-category">
		Categoria: <%= @badge.category %>
	</div>	
	<div id="badge-logo">
		<img src="<%= @badge.logo_url %>" alt="<%= @badge.name %>" id="badge-logo-img">
	</div>
	<button class="back-button">
	<%= link_to 'Back', badges_path %>
	</button>
	<div id="badge-users">
		<div id="badge-users-title">
			<h2>Utilizadores com este badge</h2>
		</div>
		<div>
			<ul id="badge-users-list">
				<% @badge.users.each do |user| %>
					<li>
						<div class="badge-user">
								<%= image_tag user.avatar.url(:thumb), class:'badge-user-photo-img' %>
							<div class="badge-user-name">
								<a href="<%= user_path(user.username) %>">
									<%= user.full_name %>
								</a>
								
							</div>
						</div>
					</li>
				<% end %>
			</ul>
		</div>
	</div>
</div>
